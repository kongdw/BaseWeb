<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="k0n9.module.archive.dao.CategoryMapper">

    <cache/>

    <sql id="selectColumns">
        id,
        name,
        weight,
        is_show
    </sql>

    <sql id="Join">
    </sql>

    <select id="fetch" resultType="Category">
        SELECT
        <include refid="selectColumns"/>
        FROM ams_category
        WHERE id = #{id}
    </select>

    <select id="findByPage" resultType="Category">
        SELECT
        <include refid="selectColumns"/>
        FROM ams_category
        ORDER BY weight DESC
    </select>

    <select id="findByList" resultType="Category">
        SELECT
        <include refid="selectColumns"/>
        FROM ams_category
        ORDER BY weight DESC
    </select>

    <select id="findByIds" resultType="Category">
        SELECT
        <include refid="selectColumns"/>
        FROM ams_category r
        WHERE id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        ORDER BY weight DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="Category">
		INSERT INTO ams_category (
            name,
            weight,
            is_show
		) VALUES (
		    #{name},
            #{weight},
            #{isShow}
		)
	</insert>

    <update id="update" parameterType="Category">
		UPDATE ams_category SET
		    name=#{name},
            weight=#{weight},
            is_show=#{isShow}
		  WHERE id = #{id}
	</update>

    <delete id="delete">
        DELETE FROM ams_category WHERE id=#{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM ams_category WHERE id in
        <foreach collection="array" index="i" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>